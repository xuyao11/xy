<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.yycars.DcFragment"
    android:orientation="vertical"
    android:background="@drawable/grid_item">

    <!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/index_background"
    android:gravity="center">
    <LinearLayout
        android:layout_width="86dp"
        android:layout_height="24dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:fontFamily="MicrosoftYaHei"
            android:textColor="@color/index_title"
            android:textSize="20dp"
            android:text="@string/index_city"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/down"/>
    </LinearLayout>
</LinearLayout>
    <com.youth.banner.Banner
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="160dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/index_background"></LinearLayout>



    <GridView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/gridview"
        android:numColumns="3"></GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DADADA"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">
        <Button
            android:layout_width="352dp"
            android:layout_height="45dp"
            android:background="@drawable/nowgo"
            android:text="立即预约"
            android:fontFamily="MicrosoftYaHei"
            android:textSize="24dp"
            android:gravity="center"
            android:textColor="#FFFFFF"/>
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="#F3F3F3"></RelativeLayout>
</LinearLayout>
